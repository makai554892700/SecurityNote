<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_100dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp">

        <ImageView
            android:id="@+id/item_copy"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:paddingStart="@dimen/size_10dp"
            android:paddingLeft="@dimen/size_10dp"
            android:src="@drawable/ic_copy_gray" />

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20dp"
            android:layout_toStartOf="@id/item_copy"
            android:layout_toLeftOf="@id/item_copy"
            android:maxLines="1"
            android:text="@string/demo_title"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_50dp"
            android:layout_below="@id/title"
            android:layout_marginTop="5dp"
            android:layout_toStartOf="@id/item_copy"
            android:layout_toLeftOf="@id/item_copy"
            android:ellipsize="middle"
            android:maxLength="50"
            android:maxLines="2"
            android:text="@string/demo_text"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_20dp"
            android:layout_below="@id/text"
            android:layout_toStartOf="@id/item_copy"
            android:layout_toLeftOf="@id/item_copy"
            android:gravity="end"
            android:maxLines="1"
            android:text="@string/demo_time"
            android:textColor="@color/gray"
            android:textSize="12sp" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>